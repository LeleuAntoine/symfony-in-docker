<div class="card-group">

    {% for game in games %}
        <div class="col-md-6" style="float:left">
            <a href="{{ path('game', {game: game.id}) }}" class="btn btn-fix text-left">
                <div class="card mb-5">
                    <img src="{{ game.picture }}" class="card-img-top" alt="{{ game.name }}">
                    <div class="card-body">
                        <h4 class="card-title">{{ game.name }}</h4>
                        <p class="card-text">{{ game.resume }}</p>
                        <div class="card-footer">
                            <small class="text-muted">Nombre de téléchargement : {{ game.download }}</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>

    {% else %}
        <p>Aucun Jeux à afficher</p>

    {% endfor %}

</div>
<div class="navigation">
    {{ knp_pagination_render(games) }}
</div>
