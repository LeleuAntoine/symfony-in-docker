            <div id="CarouselLastAdded" class="carousel slide w-100" data-ride="carousel">
                <div class="carousel-inner w-100" role="listbox">
                    {% for game in lastGames %}
                        {% include '/games/card/_carousel_card.html.twig' %}
                    {% endfor %}
                </div>
                <a class="carousel-control-prev w-auto" href="#CarouselLastAdded" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark border border-dark rounded-circle"
                          aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next w-auto" href="#CarouselLastAdded" role="button" data-slide="next">
                    <span class="carousel-control-next-icon bg-dark border border-dark rounded-circle"
                          aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>


        <a href="{{ path('most_popular') }}"><h2 class="text-center">Les Plus Populaire</h2></a>
        <div class="row mx-auto my-auto">
            <div id="CarouselMostPopular" class="carousel slide w-100" data-ride="carousel">
                <div class="carousel-inner w-100" role="listbox">
                    {% for game in mostPopulars %}
                        {% include '/games/card/_carousel_card.html.twig' %}
                    {% endfor %}
                </div>
                <a class="carousel-control-prev w-auto" href="#CarouselMostPopular" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark border border-dark rounded-circle"
